{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": false,
    "paths": { "@/*": ["./src/*"] },
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "forceConsistentCasingInFileNames": true,
    "types": ["pinia-plugin-persist", "vue-router"]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
